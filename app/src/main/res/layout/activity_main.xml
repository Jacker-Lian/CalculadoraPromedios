<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/gris_claro"
        tools:context=".MainActivity">



        <EditText
            android:id="@+id/etCalificacion1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Calificación 1"
            android:textColor="@color/negro"
            android:inputType="numberDecimal" />



        <EditText
            android:id="@+id/etCalificacion2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Calificación 2"
            android:textColor="@color/negro"
            android:inputType="numberDecimal" />



        <EditText
            android:id="@+id/etCalificacion3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Calificación 3"
            android:textColor="@color/negro"
            android:inputType="numberDecimal" />



        <Button

            android:id="@+id/btnCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blanco"
            android:text="Calcular Promedio" />



        <TextView

            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="El promedio es: "
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/amarillo"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
